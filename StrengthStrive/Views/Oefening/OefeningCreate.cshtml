@model StrengthStrive.Models.Oefening

@{
    ViewData["Title"] = "OefeningCreate";
}

<h1>OefeningCreate</h1>

@if (ViewBag.ErrorMessage != null)
{
    <p class="text-danger">@ViewBag.ErrorMessage</p>
}

<h4>Oefening</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OefeningAdd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="oefening_naam" class="control-label"></label>
                <input asp-for="oefening_naam" class="form-control" name="oefening_naam" required/>
                <span asp-validation-for="oefening_naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="OefeningAdd" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


