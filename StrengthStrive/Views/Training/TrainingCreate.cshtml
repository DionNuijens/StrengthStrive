@model StrengthStrive.Models.TrainingViewModel

@{
    ViewData["Title"] = "TrainingCreate";
}

<h1>TrainingCreate</h1>

@if (ViewBag.ErrorMessage != null)
{
    <p class="text-danger">@ViewBag.ErrorMessage</p>
}

<h4>Training</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TrainingAdd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TrainingNaam" class="control-label"></label>
                <input asp-for="TrainingNaam" class="form-control" name="training_naam" required />
                <span asp-validation-for="TrainingNaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="TrainingAdd" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


